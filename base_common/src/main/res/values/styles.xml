<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/title_maincolor</item> <!--返回键处文字颜色-->
        <item name="colorPrimary">@color/statusbar_maincolor</item>        <!--工具栏(标题栏)颜色-->
        <item name="colorAccent">@color/statusbar_maincolor
        </item>        <!--输入框 checkbox等获取焦点状态下颜色-->
        <item name="colorPrimaryDark">@color/statusbar_maincolor</item>        <!--状态栏底色(电池栏)-->
        <item name="editTextColor">@android:color/black</item><!--EditText 输入框中字体的颜色-->
        <item name="android:divider">@android:color/darker_gray</item> <!--分割线颜色-->
        <item name="android:textColorHint">@color/gray_bbbbbb</item>
        <item name="android:textColor">@color/tv_maincolor</item>
        <item name="android:windowBackground">@color/bg_maincolor</item> <!--背景色-->
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">sans</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="colorControlNormal">@color/theme_colorControlNormal
        </item><!--CheckBox，RadioButton等默认状态颜色-->
        <item name="colorControlHighlight">@color/theme_colorControlHighlight
        </item><!--所有可点击Views触摸状态下的 Ripple（涟漪）效果。仅作用于 Lollipop 及更高版本-->
        <!--<item name="android:textViewStyle">@style/TextAppearance.Text.Regular</item>-->
    </style>

    <!-- 默认动画 -->
    <style name="AnimationActivity" parent="@android:style/Theme">
        <item name="android:activityOpenEnterAnimation">@anim/a_to_b_of_in</item>
        <item name="android:activityOpenExitAnimation">@anim/a_to_b_of_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/a_back_b_of_in</item>
        <item name="android:activityCloseExitAnimation">@anim/a_back_b_of_out</item>
    </style>
    <!--全屏-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="App_Theme_Loading">
        <item name="minWidth">48dp</item>
        <item name="maxWidth">48dp</item>
        <item name="minHeight">48dp</item>
        <item name="maxHeight">48dp</item>
        <item name="indicatorName">LoadingIndicator</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/colorAccent</item> <!--  menu颜色-->
        <item name="android:textSize">16sp</item> <!--  menu字体大小-->
        <item name="android:textColor">@color/colorAccent</item> <!--  menu字体大小-->
    </style>

    <style name="TvCenterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">@dimen/dp10</item>
        <item name="android:paddingBottom">@dimen/dp10</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
    </style>
</resources>
